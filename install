#!/usr/bin/env bash

set -euo pipefail

if brew services info borders 1>/dev/null 2>&1; then
	brew services stop borders
fi

if brew services info sketchybar 1>/dev/null 2>&1; then
	brew services stop sketchybar
fi

INSTALL_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SETUP_DIR="${INSTALL_DIR}/setup"
SCRIPT_DIR="${INSTALL_DIR}/scripts"

. "${SETUP_DIR}/printing.sh"

"${SCRIPT_DIR}/disable-zs"

. "${SETUP_DIR}/prerequisites.sh"
. "${SETUP_DIR}/defaults.sh"
. "${SETUP_DIR}/xdg.sh"
. "${SETUP_DIR}/brews.sh"
. "${SETUP_DIR}/stow.sh"
. "${SETUP_DIR}/shell.sh"

"${SCRIPT_DIR}/enable-zs"

fastfetch
printf '\n'
